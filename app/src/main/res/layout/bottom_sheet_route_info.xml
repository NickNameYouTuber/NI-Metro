<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routeInfoContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_background"
    android:clickable="true"
    android:elevation="4dp"
    android:maxHeight="500dp"
    android:minHeight="200dp"
    app:layout_constraintHeight_max="1000dp">

    <LinearLayout
        android:id="@+id/routeInfoContentWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="1000dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/routeInfoContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingEnd="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/routeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Краткая информация"
                    android:textColor="?attr/colorOnBackground"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/closeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_close"
                    app:tint="?attr/colorCloseIcon" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/summaryNearestTrainsRV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:overScrollMode="never"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/routeTitle"
                    app:layout_constraintEnd_toStartOf="@id/closeButton"
                    app:layout_constraintStart_toEndOf="@id/routeTitle"
                    app:layout_constraintTop_toTopOf="@id/routeTitle" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/routeTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Быстрый"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:id="@+id/layoutSummary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:minHeight="30dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/summaryRouteTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 мин"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/summaryRouteStations"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="0 ст."
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/routeInfoGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/nearestTrainsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_train"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="8dp"
                            android:paddingTop="8dp"
                            android:text="Ближайшие поезда:"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnBackground"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/nearestTrainsRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_train_info" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="8dp"
                            android:background="?attr/colorOutline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_clock"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/routeTimeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Время:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/routeTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 мин"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_station"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/routeStationsTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Станций:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/routeStationsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_transfer"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/routeTransfersTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Пересадок:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/routeTransfersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_price"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/routeFareTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Цена:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/routeCost"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 ₽"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tripInfoGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:visibility="gone">

                        <com.nicorp.nimetro.presentation.views.AnimatedPathMapView
                            android:id="@+id/tripTransferMapView"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="16dp"
                            android:adjustViewBounds="true"
                            android:minWidth="300dp"
                            android:minHeight="300dp"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_station"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tripCurrentStationTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Текущая станция:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tripCurrentStationValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Третьяковская"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="?attr/colorOutline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_next_station"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tripNextStationTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Следующая станция:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tripNextStationValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Китай-город"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="4dp"
                            android:background="?attr/colorOutline" />

                        <LinearLayout
                            android:id="@+id/tripTransferTimeContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_transfer_time"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tripTransferTimeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="До перехода:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tripTransferTimeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 мин"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_clock"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:id="@+id/tripRemainingTimeTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="До конца маршрута:"
                                android:textColor="?attr/colorOnBackground"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tripRemainingTimeValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="33 мин"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tripTransferHint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:drawableStart="@drawable/ic_info"
                            android:drawableTint="?attr/colorPrimary"
                            android:drawablePadding="8dp"
                            android:text=""
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:visibility="gone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/startRouteButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/rounded_button_background"
                        android:padding="8dp"
                        android:text="Поехали"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:visibility="gone">

                    <com.nicorp.nimetro.presentation.views.AnimatedPathMapView
                        android:id="@+id/transferMapView"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:minHeight="300dp"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ScrollView
                        android:id="@+id/routeScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="200dp">

                        <LinearLayout
                            android:id="@+id/routeDetailsContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="16dp" />
                    </ScrollView>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dotsIndicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end|center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingEnd="10dp">

            <View
                android:id="@+id/dotTop"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="6dp"
                android:background="@drawable/dot_unselected" />

            <View
                android:id="@+id/dotMiddle"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="6dp"
                android:background="@drawable/dot_selected" />

            <View
                android:id="@+id/dotBottom"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="6dp"
                android:background="@drawable/dot_unselected" />

            <!-- Индикатор состояния Переход -->
            <View
                android:id="@+id/dotTransfer"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="6dp"
                android:background="@drawable/dot_unselected"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>