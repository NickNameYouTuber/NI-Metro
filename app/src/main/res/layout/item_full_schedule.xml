<!-- item_full_schedule.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_background"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Заголовок с номером поезда -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_train"
            android:tint="?attr/colorPrimary"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/trainNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7276"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Время отправления -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/departureTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:03"
            android:textSize="14sp"
            android:textColor="?attr/colorOnBackground"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

    <!-- Время прибытия -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/arrivalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:06"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            android:fontFamily="sans-serif"/>
    </LinearLayout>

    <!-- Длительность поездки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_timer"
            android:tint="?attr/colorPrimary"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 мин"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <!-- Название поезда -->
    <TextView
        android:id="@+id/trainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Одинцово — Москва (Белорусский вокзал)"
        android:textSize="14sp"
        android:textColor="?attr/colorOnBackground"
        android:layout_marginTop="8dp"/>

    <!-- Название перевозчика -->
    <TextView
        android:id="@+id/carrierTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Центральная пригородная пассажирская компания"
        android:textSize="12sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="4dp"/>
</LinearLayout>